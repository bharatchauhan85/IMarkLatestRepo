                                <material:MaterialSwitch Grid.Column="1" IsActivated="True" ActiveTrackColor="WhiteSmoke" ActiveThumbColor="Red" InactiveTrackColor="WhiteSmoke" InactiveThumbColor="Gray" />
                            </Grid>
                        </Grid>
