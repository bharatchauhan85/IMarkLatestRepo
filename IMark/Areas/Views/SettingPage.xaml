                      </Grid>
                        </Grid>-->
                        <BoxView Margin="0,10,0,4" Style="{StaticResource BoxViewStyle}" />
                        <BoxView Margin="0,10,0,4" Style="{StaticResource BoxViewStyle}" />
                    </StackLayout>

                    <StackLayout Margin="0,4">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                FontSize="17"
                                Style="{StaticResource DefaultLabelStyle}"
                                Text="App language"
                                VerticalOptions="CenterAndExpand" />
                            <StackLayout
                                Grid.Column="1"
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal">
                                <controls:AppPicker
                                    x:Name="picker"
                                    Title="English"
                                    FontFamily="{StaticResource QuicksandBoldFont}"
                                    FontSize="16"
                                    HorizontalOptions="EndAndExpand"
                                    TextColor="#8c8c8c"
                                    TitleColor="#8c8c8c"
                                    VerticalOptions="Center">
                                    <controls:AppPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>English</x:String>
                                            <x:String>Hindi</x:String>
                                        </x:Array>
                                    </controls:AppPicker.ItemsSource>
                                </controls:AppPicker>
                                <Image
                                    HeightRequest="13"
                                    HorizontalOptions="Center"
                                    Source="LinerDrowndrown"
                                    VerticalOptions="Center"
                                    WidthRequest="13" />
                            </StackLayout>
                        </Grid>
                        <BoxView Margin="0,4" Style="{StaticResource BoxViewStyle}" />
                    </StackLayout>
                    <StackLayout Margin="0,4">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                FontSize="17"
                                Style="{StaticResource DefaultLabelStyle}"
                                Text="Currency"
                                VerticalOptions="Center" />
                            <StackLayout
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Orientation="Horizontal">
                                <controls:AppPicker
                                    Title="CAD-$"
                                    FontFamily="{StaticResource QuicksandBoldFont}"
                                    FontSize="16"
                                    HorizontalOptions="EndAndExpand"
                                    TextColor="#8c8c8c"
                                    TitleColor="#8c8c8c"
                                    VerticalOptions="Center">
                                    <controls:AppPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>CAD-$</x:String>
                                            <x:String>INR</x:String>
                                            <x:String>$-USD</x:String>
                                        </x:Array>
                                    </controls:AppPicker.ItemsSource>
                                </controls:AppPicker>
                                <Image
                                    HeightRequest="13"
                                    HorizontalOptions="Center"
                                    Source="LinerDrowndrown"
                                    VerticalOptions="Center"
                                    WidthRequest="13" />
                            </StackLayout>
                        </Grid>
                        <BoxView Margin="0,4" Style="{StaticResource BoxViewStyle}" />
                    </StackLayout>

                </StackLayout>
            </StackLayout>

            <StackLayout
                Margin="0,20"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="EndAndExpand">
                <Label
                    FontSize="12"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource DefaultLabelStyle2}"
                    Text="App Version"
                    TextColor="#8c8c8c" />
                <Label
                    FontSize="12"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource DefaultLabelStyle2}"
                    Text="0.1.0.1"
                    TextColor="#8c8c8c" />
