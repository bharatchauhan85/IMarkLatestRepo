                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                    <controls:AppPicker
                                        x:Name="Countrypicker"  FontFamily="{StaticResource QuicksandBoldFont}" Title="Choose Country" FontSize="16" HorizontalOptions="Start"
                                        TextColor="Black" TitleColor="Black" FontAttributes="Bold"
                                        VerticalOptions="Center">
                                        <controls:AppPicker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                            <x:String>Armenia</x:String>
                                            <x:String>Andorra</x:String>
                                            </x:Array>
                                        </controls:AppPicker.ItemsSource>
                                    </controls:AppPicker>
                                <Image Grid.Column="1" Source="LinerDrowndrown" VerticalOptions="Center"  HorizontalOptions="End" HeightRequest="13" WidthRequest="13"/>
                            </Grid>-->
                            <!--<Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                            </Frame.GestureRecognizers>-->
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsCountryErrorVisible}"
                            Text="Please Enter Valid Country Name"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Province"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Province}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsProvinceErrorVisible}"
                            Text="Please Enter Province"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Phone"
                                Keyboard="Numeric"
                                MaxLength="10"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Phone}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsPhoneErrorVisible}"
                            Text="Please Enter Phone"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Keyboard="Numeric"
                                Placeholder="Postal/Zip"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding PostalCode}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsPostalCodeErrorVisible}"
                            Text="Please Enter Zip Code"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="City"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding City}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsCityErrorVisible}"
                            Text="Please Enter City"
                            TextColor="Red" />


                        <StackLayout Margin="0,20">
                            <Button
                                Command="{Binding SavedCommand}"
                                Style="{DynamicResource DefaultButtonStyle}"
                                Text="Saved" />
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>