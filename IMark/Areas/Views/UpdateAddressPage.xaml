<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IMark.Areas.Views.UpdateAddressPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IMark.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>

        <StackLayout>
            <StackLayout>
                <StackLayout
                    Margin="0,0,0,5"
                    HeightRequest="60"
                    Orientation="Vertical">
                    <StackLayout Orientation="Horizontal">
                        <ImageButton
                            Margin="10"
                            Padding="0"
                            BackgroundColor="Transparent"
                            Command="{Binding GetBackCommand}"
                            HeightRequest="24"
                            HorizontalOptions="Start"
                            Source="back"
                            VerticalOptions="Center"
                            WidthRequest="24" />
                        <Label
                            Margin="5,0"
                            FontSize="20"
                            HorizontalOptions="Start"
                            Style="{StaticResource DefaultLabelStyle}"
                            Text="Update address"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                    <BoxView Style="{StaticResource BoxViewStyle}" />
                </StackLayout>
                <ScrollView>
                    <StackLayout Padding="10">
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="First Name"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding FirstName}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsFirstNameErrorVisible}"
                            Text="Please Enter FirstName"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Last Name"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding LastName}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsLastNameErrorVisible}"
                            Text="Please Enter LastName"
                            TextColor="Red" />

                        <!--<Frame
                    Margin="0,5"
                    Padding="6"
                    BackgroundColor="#F0EFF5"
                    BorderColor="#F0EFF5"
                    HeightRequest="38"
                    Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                        Margin="20,0,10,0"
                        FontFamily="{DynamicResource QuicksandBoldFont}"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Email"
                        PlaceholderColor="Gray"
                        Style="{DynamicResource DefaultEntryStyle}"
                        Text="{Binding Email}"
                        TextColor="Gray" />
                        </Frame>-->

                        <!--<Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Apt, Unit, Suit,etc(Optional)"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Option}"
                                TextColor="Gray" />
                        </Frame>-->
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Address"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Address1}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Label
                            FontSize="12"
                            IsVisible="{Binding IsAddressErrorVisible}"
                            Text="Please Enter Address"
                            TextColor="Red" />
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">
                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Address"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Address2}"
                                TextColor="#2D2D31" />
                        </Frame>
                        <Frame
                            Margin="0,5"
                            Padding="6"
                            BackgroundColor="#F0EFF5"
                            BorderColor="#F0EFF5"
                            HeightRequest="38"
                            Style="{DynamicResource FrameStyle}">

                            <controls:BorderlessEntry
                                Margin="20,0,10,0"
                                FontFamily="{DynamicResource QuicksandBoldFont}"
                                HorizontalOptions="FillAndExpand"
                                Placeholder="Country Name"
                                PlaceholderColor="Gray"
                                Style="{DynamicResource DefaultEntryStyle}"
                                Text="{Binding Country}"
                                TextColor="#2D2D31" />
                            
