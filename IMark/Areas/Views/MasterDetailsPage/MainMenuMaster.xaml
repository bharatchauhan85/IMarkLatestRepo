                            </Grid.GestureRecognizers>-->
                        </Grid>
                        <BoxView Margin="0,5,0,0" Style="{StaticResource BoxViewStyle}" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OurContributionCommand}" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <StackLayout Margin="10,8,10,8">
                        <Grid>
