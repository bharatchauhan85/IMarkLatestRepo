<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IMark.Areas.Views.MasterDetailsPage.MainMenuMaster"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IMark.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local1="clr-namespace:IMark.Areas.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{DynamicResource CommonPageBackgroundColor}"
    mc:Ignorable="d">
    <StackLayout>
        <StackLayout>
            <Grid ColumnDefinitions="*,Auto">
                <Grid>
                    <yummy:PancakeView
                        Margin="0,10,2,0"
                        BackgroundGradientAngle="180"
                        BackgroundGradientEndColor="Transparent"
                        BackgroundGradientStartColor="Transparent"
                        CornerRadius="0,25,0,25"
                        HeightRequest="120"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <Grid Margin="5,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <controls:CircleImage
                                Aspect="AspectFill"
                                BorderColor="White"
                                BorderThickness="2"
                                HeightRequest="80"
                                HorizontalOptions="Start"
                                Source="{Binding ProfileImageSource}"
                                VerticalOptions="Center"
                                WidthRequest="80" />
                            <StackLayout
                                Grid.Column="1"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Vertical"
                                Spacing="1"
                                VerticalOptions="CenterAndExpand">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Style="{DynamicResource DefaultLabelStyle}"
                                    Text="{Binding UserName}"
                                    TextColor="Black"
                                    VerticalOptions="End" />
                                <Label
                                    Margin="0,2,0,2"
                                    FontSize="13"
                                    Style="{DynamicResource DefaultLabelStyle2}"
                                    Text="{Binding UserMailId}"
                                    TextColor="Black"
                                    VerticalOptions="Start"
                                    VerticalTextAlignment="Start" />

                            </StackLayout>
                        </Grid>
                    </yummy:PancakeView>
                </Grid>
                <ImageButton
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    BackgroundColor="Transparent"
                    Command="{Binding IsPresentFalseCommand2}"
                    HeightRequest="50"
                    HorizontalOptions="End"
                    Source="close_red"
                    VerticalOptions="Center"
                    WidthRequest="50" />
            </Grid>
        </StackLayout>
        <StackLayout>
            <ScrollView>
                <StackLayout Margin="6">
                    <StackLayout>
                        <Grid Margin="10,8,10,8" InputTransparent="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                HeightRequest="16"
                                HorizontalOptions="Start"
                                Source="Shop"
                                VerticalOptions="Center"
                                WidthRequest="16" />
                            <Label
                                Grid.Column="1"
                                HorizontalOptions="Start"
                                Style="{DynamicResource DefaultLabelStyle}"
                                Text="Shop"
                                VerticalOptions="Center" />
                            <Image
                                Grid.Column="2"
                                HeightRequest="12"
                                HorizontalOptions="End"
                                Source="forwardarrow.png"
                                VerticalOptions="Center"
                                WidthRequest="12" />
                            <!--<Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShopCommand}" />
                            </Grid.GestureRecognizers>-->
                        </Grid>
                        <BoxView Margin="0,5,0,0" Style="{StaticResource BoxViewStyle}" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShopCommand}" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <StackLayout Padding="0">
                        <Grid Margin="10,8,10,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                HeightRequest="16"
                                HorizontalOptions="Start"
                                InputTransparent="True"
                                Source="PhotoGallery.png"
                                VerticalOptions="Center"
                                WidthRequest="16" />
                            <Label
                                Grid.Column="1"
                                HorizontalOptions="Start"
                                InputTransparent="True"
                                Style="{DynamicResource DefaultLabelStyle}"
                                Text="Photo Gallery"
                                VerticalOptions="Center" />
